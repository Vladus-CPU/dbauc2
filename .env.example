# ВАЖЛИВО
# Перейменуйте цей файл як .env
# Заповніть ВСІ поля нижче
# База даних створюється АВТОМАТИЧНО при запуску app.py
# Хост MySQL сервера
DB_HOST=localhost

# Ім'я користувача MySQL
DB_USER=root

# Пароль користувача MySQL
DB_PASSWORD=змінить_на_ваш_пароль

# Назва бази даних (буде створена автоматично, якщо не існує)
DB_NAME=auction

# Порт MySQL
DB_PORT=3306